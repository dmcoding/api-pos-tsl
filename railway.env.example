# Railway Environment Variables Configuration
# Copy these variables to your Railway project settings

# Database Configuration (Railway will provide this automatically)
# DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration (IMPORTANT: Change these in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production-railway
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_NAME=POS API
APP_VERSION=1.0.0
DEBUG=False
API_V1_STR=/api/v1

# CORS Configuration (Add your frontend domains)
ALLOWED_ORIGINS=["https://your-frontend-domain.com", "https://your-app.vercel.app"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH"]
ALLOWED_HEADERS=["*"]

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Railway specific
PORT=8000
